
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/side_fragment"
    android:layout_width="match_parent"
    android:background="@color/primary"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.crackdeveloperz.tgif.NagivationDrawer">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cross_at_drawer"
        android:background="@drawable/cross65"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_sep_height"
        android:layout_marginRight="@dimen/navig_icon_sep_margin"
        android:layout_marginLeft="@dimen/navig_icon_sep_margin"
        android:background="@color/nav_icon_sep_color"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitter_at_drawer"
        android:background="@drawable/twitter65"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_sep_height"
        android:layout_marginRight="@dimen/navig_icon_sep_margin"
        android:layout_marginLeft="@dimen/navig_icon_sep_margin"
        android:background="@color/nav_icon_sep_color"/>



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tumblr_at_drawer"
        android:background="@drawable/tumblr65"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_sep_height"
        android:layout_marginRight="@dimen/navig_icon_sep_margin"
        android:layout_marginLeft="@dimen/navig_icon_sep_margin"
        android:background="@color/nav_icon_sep_color"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/googleplus_at_drawer"
        android:background="@drawable/google65"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_sep_height"
        android:layout_marginRight="@dimen/navig_icon_sep_margin"
        android:layout_marginLeft="@dimen/navig_icon_sep_margin"
        android:background="@color/nav_icon_sep_color"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/insta_at_drawer"
        android:background="@drawable/intagram65"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/icon_sep_height"
        android:layout_marginRight="@dimen/navig_icon_sep_margin"
        android:layout_marginLeft="@dimen/navig_icon_sep_margin"
        android:background="@color/nav_icon_sep_color"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebook_at_drawer"
        android:background="@drawable/fb65"/>


</LinearLayout>
